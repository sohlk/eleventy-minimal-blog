<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ metadata.title }}</title>
    <meta name="description" content="{{ metadata.description }}">
    <link rel="alternate" href="{{ metadata.feedurl }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/post-list.css">
    <link rel="stylesheet" href="/css/post-content.css">
    <link rel="stylesheet" href="/css/prism.css">
  </head>
  <body>
    <div id="container">
      <div id="header">
        <h1 id="title"><a href="{{ '/' }}">{{ metadata.title }}</a></h1>
        <ul id="nav">
        {% for item in metadata.nav -%}
          <li><a class="hover-bg" href="{{ item.url }}">{{ item.name }}</a></li>
        {% endfor -%}
        </ul>
      </div>

      <div id="main">
        {{ content | safe }}
      </div>

      <div id="footer">
        <div class="links">
          <a class="hover-bg" href="{{ metadata.links.github}}">Github</a>
          <a class="hover-bg" href="{{ metadata.feedurl }}">Rss</a>
        </div>
        <div id="copyright">
          Powered by <a href="https://www.11ty.dev/">Eleventy</a>
        </div>
      </div>
    </div>
  </body>
</html>
