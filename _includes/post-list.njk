---
layout: base.njk
---

<div>
{% for post in pagination.items -%}
  <div class="post-header">
    <h1 class="post-title"><a href={{ post.url }}>{{ post.data.title }}</a></h1>
    <div class="post-time">{{ post.date.toDateString() }}</div>
  </div>
  {% if summaryDisplay != false -%}
  <div class="post-summary">{{ post.data.summary }}</div>
  {% endif -%}
{% endfor -%}
</div>

<div id="page-nav">
{% if pagination.hrefs[pagination.pageNumber] != pagination.href.first-%}
  <a id="prev-page" class="hover-bg" href="{{pagination.href.previous}}"><</a>
{% endif %}
{% if pagination.hrefs[pagination.pageNumber] != pagination.href.last-%}
  <a id="next-page" class="hover-bg" href="{{pagination.href.next}}">></a>
{% endif %}
</div>
